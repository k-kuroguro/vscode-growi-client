{
   "name": "growi-client",
   "displayName": "Growi Client",
   "description": "VSCodeからGrowiの編集・閲覧を行うための拡張機能",
   "version": "0.0.1",
   "engines": {
      "vscode": "^1.58.0"
   },
   "categories": [
      "Other"
   ],
   "activationEvents": [
      "*"
   ],
   "main": "./dist/extension.js",
   "contributes": {
      "commands": [
         {
            "command": "growi-client.setApiToken",
            "category": "Growi Client",
            "title": "Set Api Token"
         },
         {
            "command": "growi-client.clearApiToken",
            "category": "Growi Client",
            "title": "Clear Api Token"
         },
         {
            "command": "growi-client.setGrowiUrl",
            "category": "Growi Client",
            "title": "Set Growi URL"
         },
         {
            "command": "growi-client.pageExplorer.refresh",
            "category": "Growi Client",
            "title": "Refresh Page Explorer",
            "icon": "$(extensions-refresh)"
         },
         {
            "command": "growi-client.pageExplorer.openPageInBrowser",
            "category": "Growi Client",
            "title": "Open In Browser"
         },
         {
            "command": "growi-client.pageExplorer.editPageInBrowser",
            "category": "Growi Client",
            "title": "Edit In Browser"
         },
         {
            "command": "growi-client.pageExplorer.createNewPage",
            "category": "Growi Client",
            "title": "New Page"
         }
      ],
      "views": {
         "growi-client": [
            {
               "id": "growi-client.pageExplorer",
               "name": "Page Explorer",
               "icon": "$(files)",
               "contextualTitle": "Page Explorer"
            }
         ]
      },
      "viewsContainers": {
         "activitybar": [
            {
               "id": "growi-client",
               "title": "Growi Client",
               "icon": "resources/growi-logo.svg"
            }
         ]
      },
      "viewsWelcome": [
         {
            "view": "growi-client.pageExplorer",
            "contents": "GrowiのURLが未設定です.\n[Set Growi URL](command:growi-client.setGrowiUrl)",
            "when": "!config.growi-client.growiUrl"
         },
         {
            "view": "growi-client.pageExplorer",
            "contents": "Api Tokenが未設定です.\n[Set Api Token](command:growi-client.setApiToken)",
            "when": "!growi-client.apiTokenIsUndefined"
         }
      ],
      "menus": {
         "view/title": [
            {
               "command": "growi-client.pageExplorer.refresh",
               "when": "view == growi-client.pageExplorer",
               "group": "navigation"
            }
         ],
         "view/item/context": [
            {
               "command": "growi-client.pageExplorer.createNewPage",
               "when": "view == growi-client.pageExplorer",
               "group": "navigation@1"
            },
            {
               "command": "growi-client.pageExplorer.openPageInBrowser",
               "when": "view == growi-client.pageExplorer",
               "group": "navigation@2"
            },
            {
               "command": "growi-client.pageExplorer.editPageInBrowser",
               "when": "view == growi-client.pageExplorer",
               "group": "navigation@3"
            }
         ],
         "commandPalette": [
            {
               "command": "growi-client.pageExplorer.openPageInBrowser",
               "when": "false"
            },
            {
               "command": "growi-client.pageExplorer.editPageInBrowser",
               "when": "false"
            }
         ]
      },
      "languages": [
         {
            "id": "markdown",
            "extensions": [
               ".growi"
            ]
         }
      ],
      "configuration": {
         "type": "object",
         "title": "Growi Client",
         "properties": {
            "growi-client.growiUrl": {
               "type": "string",
               "default": null
            }
         }
      }
   },
   "scripts": {
      "vscode:prepublish": "npm run webpack:prod",
      "webpack:dev": "webpack --mode development",
      "webpack:prod": "webpack --mode production --devtool hidden-source-map",
      "webpack:watch": "webpack --watch",
      "watch": "npm run webpack:watch",
      "tsc": "tsc -p ./",
      "tsc:watch": "tsc -watch -p ./",
      "test-compile": "run-p webpack:dev tsc",
      "test-watch": "run-p webpack:watch tsc:watch",
      "pretest": "npm run test-compile && npm run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js"
   },
   "devDependencies": {
      "@types/glob": "^7.1.3",
      "@types/mocha": "^8.0.4",
      "@types/node": "^12.11.7",
      "@types/vscode": "^1.58.0",
      "@typescript-eslint/eslint-plugin": "^4.14.1",
      "@typescript-eslint/parser": "^4.14.1",
      "eslint": "^7.19.0",
      "glob": "^7.1.6",
      "mocha": "^8.2.1",
      "npm-run-all": "^4.1.5",
      "ts-loader": "^8.0.14",
      "typescript": "^4.1.3",
      "vscode-test": "^1.5.0",
      "webpack": "^5.19.0",
      "webpack-cli": "^4.4.0"
   },
   "dependencies": {
      "axios": "^0.21.1"
   }
}
